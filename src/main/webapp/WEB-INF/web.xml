<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee 
         http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
	version="3.1">
	<display-name>Sportloc Application</display-name>
	<servlet>
		<servlet-name>RegistrationServlet</servlet-name>
		<servlet-class>servlet.post.RegistrationServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>LoginServlet</servlet-name>
		<servlet-class>servlet.get.LoginServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>ResetPasswordServlet</servlet-name>
		<servlet-class>servlet.get.ResetPasswordServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>CheckUserServlet</servlet-name>
		<servlet-class>servlet.get.CheckUserServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>CheckEmailServlet</servlet-name>
		<servlet-class>servlet.get.CheckEmailServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>SportsServlet</servlet-name>
		<servlet-class>servlet.get.SportsServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>CitiesServlet</servlet-name>
		<servlet-class>servlet.get.CitiesServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>CreateEventServlet</servlet-name>
		<servlet-class>servlet.post.CreateEventServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>UpdateEventServlet</servlet-name>
		<servlet-class>servlet.post.UpdateEventServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>DeleteEventServlet</servlet-name>
		<servlet-class>servlet.get.DeleteEventServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>EventListServlet</servlet-name>
		<servlet-class>servlet.post.EventListServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>ParticipantListServlet</servlet-name>
		<servlet-class>servlet.get.ParticipantListServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>GetProfileServlet</servlet-name>
		<servlet-class>servlet.get.GetProfileServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>UpdateProfileServlet</servlet-name>
		<servlet-class>servlet.post.UpdateProfileServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>CommentListServlet</servlet-name>
		<servlet-class>servlet.get.CommentListServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>WriteCommentServlet</servlet-name>
		<servlet-class>servlet.post.WriteCommentServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>ResolveCommentServlet</servlet-name>
		<servlet-class>servlet.post.ResolveCommentServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>ResolveParticipantServlet</servlet-name>
		<servlet-class>servlet.post.ResolveParticipantServlet</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>RegistrationServlet</servlet-name>
		<url-pattern>/register</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>LoginServlet</servlet-name>
		<url-pattern>/login</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>ResetPasswordServlet</servlet-name>
		<url-pattern>/resetPassword</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>CheckUserServlet</servlet-name>
		<url-pattern>/checkUser</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>CheckEmailServlet</servlet-name>
		<url-pattern>/checkEmail</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>SportsServlet</servlet-name>
		<url-pattern>/getSports</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>CitiesServlet</servlet-name>
		<url-pattern>/getCities</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>CreateEventServlet</servlet-name>
		<url-pattern>/createEvent</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>UpdateEventServlet</servlet-name>
		<url-pattern>/updateEvent</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>DeleteEventServlet</servlet-name>
		<url-pattern>/deleteEvent</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>EventListServlet</servlet-name>
		<url-pattern>/getEvents</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>ParticipantListServlet</servlet-name>
		<url-pattern>/getParticipants</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>GetProfileServlet</servlet-name>
		<url-pattern>/getProfile</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>UpdateProfileServlet</servlet-name>
		<url-pattern>/updateProfile</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>CommentListServlet</servlet-name>
		<url-pattern>/getComments</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>WriteCommentServlet</servlet-name>
		<url-pattern>/writeComment</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>ResolveCommentServlet</servlet-name>
		<url-pattern>/resolveComment</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>ResolveParticipantServlet</servlet-name>
		<url-pattern>/resolveParticipant</url-pattern>
	</servlet-mapping>
</web-app>

